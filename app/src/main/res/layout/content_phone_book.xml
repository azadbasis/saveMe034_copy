<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_phone_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nanosoft.bd.saveme.activity.PhoneBookActivity"
    tools:showIn="@layout/app_bar_phone_book">


    <EditText
        android:id="@+id/searchEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:padding="8dp"
        android:hint="Search Contact"
        android:background="@drawable/spinner_border2"
        android:visibility="gone"
        />




    <ListView
        android:id="@+id/contactLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#85ddea"
        android:dividerHeight="2dp"
        android:divider="#014008"
        >


    </ListView>


</LinearLayout>
