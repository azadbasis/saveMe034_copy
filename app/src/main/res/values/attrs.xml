<resources>

    <declare-styleable name="BlocksLayout">
        <attr name="columns" format="integer" />
    </declare-styleable>

    <declare-styleable name="TimeRulerView">
        <attr name="headerWidth" format="dimension" />
        <attr name="hourHeight" format="dimension" />
        <attr name="horizontalDivider" format="boolean" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelPaddingLeft" format="dimension" />
        <attr name="labelColor" format="color" />
        <attr name="dividerColor" format="color" />
        <attr name="startHour" format="integer" />
        <attr name="endHour" format="integer" />
    </declare-styleable>




    <declare-styleable name="SpringIndicator">

        <!--tab text color -->
        <attr name="siTextColor" format="reference"/>

        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference"/>

        <!--tab item bg -->
        <attr name="siTextBg" format="reference"/>

        <!--tab text size-->
        <attr name="siTextSize" format="dimension"/>

        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference"/>

        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference"/>

        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension"/>

        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension"/>

    </declare-styleable>


</resources>
